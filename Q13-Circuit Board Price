// Program that calculates the total sale including the profit of circuit board

#include <iostream>                             //Including file for Input/Output
using namespace std;                            //Converting the Input/Output into standard form

//Main function of program
int main()
{
    double cost = 12.67;                        //circuit board cost = 12.67
    double profit = 0.4;                        //profit = 40% = 0.4

    //formula for profit amount
    double profit_amount = cost * profit;

    //formula for total sale including profit amount
    double sale = cost + profit_amount;

    //printing the content
    cout << "The selling price of a circuit board = $" << sale ;
    cout << endl << endl;
    return 0;
}
