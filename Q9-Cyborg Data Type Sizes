//Determine the amount of memory used by char, int, float, and double types and display the information on the screen

#include <iostream>                             //Including file for Input/Output
using namespace std;                            //Converting the Input/Output into standard form

//Main function of program
int main()
{
    //printing the sizes
    cout << "Size of Char = " << sizeof(char) << "B" << endl <<endl;
    cout << "Size of Int = " << sizeof(int) << "B" << endl <<endl;
    cout << "Size of float = " << sizeof(float) << "B" << endl <<endl;
    cout << "Size of double = " << sizeof(double) << "B" << endl <<endl;

    return 0;
}
