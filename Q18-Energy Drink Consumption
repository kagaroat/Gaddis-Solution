// Program that displays Energy Drink Consumption

#include <iostream>                         //Including file for Input/Output
using namespace std;                        //Converting the Input/Output into standard form

//Main function of program
int main()
{
    double customer = 12467;                //Number of customer
    double percent1 = .14;                  //Customer who bought one or more drinks
    double percent2 = .64;                  //Customer with one or more drinks who bought citrus

    //formula for more and citrus
    double more = customer * percent1;
    double citrus = more * percent2;

    //printing the content
    cout << "Customers who purchase one or more energy drinks per week is = " << more << endl << endl;
    cout << "Customers who prefer citrus flavored energy drinks is = " << citrus << endl << endl;
}
