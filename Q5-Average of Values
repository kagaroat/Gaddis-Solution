// Average of a series of values

#include <iostream>                                                     //Including file for Input/Output
using namespace std;                                                    //Converting the Input/Output into standard form

//Main function of program
int main()
 {
     float number1 = 28;                                                 //First value
     float number2 = 32;                                                 //Second value
     float number3 = 37;                                                 //Third value
     float number4 = 24;                                                 //Fourth value
     float number5 = 33;                                                 //Fifth value
     float sum = (number1 + number2 + number3 + number4 + number5);      //sum of five values
     float average = sum / 5;                                            //average of five values

    //printing the average of five values along with the values
     cout << "The average of the 5 values" << endl;
     cout << "(" << number1 << ", " << number2 << ", " << number3 << ", " << number4 << ", and " << number5 << ") is = " << average << "." << endl;
     return 0;
 }
