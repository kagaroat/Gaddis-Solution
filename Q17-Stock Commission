// Program that displays stock commission

#include <iostream>                                         //Including file for Input/Output
using namespace std;                                        //Converting the Input/Output into standard form

//Main function of program
int main()
{
    double rate = 21.77;
    double shares = 600;                                    //number of shares
    double commission = .02;                                //commission rate

    //formula for paid amount , commission amount and total
    double amount_paid = rate * shares;
    double commission_amount = amount_paid * commission;
    double total = commission_amount + amount_paid;

    //printing the content
    cout << "The amount paid for the stock without the commission is = $" << amount_paid << endl << endl;
    cout << "The amount of the commission is = $" << commission_amount << endl << endl;
    cout << "The total amount paid for the stock plus the commission is = $" << total << endl << endl;
    return 0;
}
